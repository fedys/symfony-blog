{% extends 'admin/layout/base.html.twig' %}

{# @var user \Symfony\Component\Security\Core\User\UserInterface #}
{% set user = app.user %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="{{ path('admin_dashboard') }}">Admin</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#topbar" aria-controls="topbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="topbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_blog_list') }}">Blog</a>
                </li>
            </ul>
            <div class="dropdown float-right nav-item">
                <a class="nav-link dropdown-toggle text-white" href="#" id="user-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="text-muted">Logged as</span> {{ user.username }}</a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-menu">
                    <a class="dropdown-item" href="{{ path('admin_security_logout') }}">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="container pt-5">
        <div class="pt-4">
            {% include 'admin/include/flash_messages.html.twig' %}
            {% block content %}{% endblock %}
        </div>
    </main>
{% endblock %}
