{% extends 'front/layout/default.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <h1>{{ post.title }}</h1>
    <p class="text-muted">{{ post.date|date }}</p>
    <div class="mt-5">{{ post.text|raw }}</div>
    {% if post.tags %}
        <p class="mt-3 text-right">Tags: <strong>{{ post.tags|join(', ') }}</strong></p>
    {% endif %}
    <div class="mt-5">
        <a href="{{ path('front_post_list') }}">&#171; Back to posts</a>
    </div>
{% endblock %}


